{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "bitbucketServer": {
      "properties": {
        "instances": {
          "default": 1,
          "description": "Number of instances to run.",
          "minimum": 1,
          "type": "integer"
        },
        "user": {
          "default": "root",
          "description": "User to run as",
          "type": "string"
        },
        "cpus": {
          "default": 1,
          "description": "CPU shares to allocate to each bitbucketServer instance.",
          "minimum": 1,
          "type": "number"
        },
        "host-volume": {
            "description": "The location of a volume on the host to be used for persisting Bitbucket data. The final location will be derived from this value plus the name set in `name` (e.g. `/mnt/host_volume/bitbucket`). Note that this path must be the same on all DCOS agents.",
            "type": "string",
            "default": "/tmp"
        },
        "mem": {
          "default": 1024.0,
          "description": "Memory (MB) to allocate to each bitbucketServer task.",
          "minimum": 256.0,
          "type": "number"
        },
        "minimumHealthCapacity": {
          "default": 0.5,
          "description": "Minimum health capacity.",
          "minimum": 0,
          "type": "number"
        },
        "maximumOverCapacity": {
          "default": 0.2,
          "description": "Maximum over capacity.",
          "minimum": 0,
          "type": "number"
        },
        "name": {
          "default": "bitbucketServer",
          "description": "Name for this bitbucketServer application",
          "type": "string"
        },
        "role": {
          "default": "*",
          "description": "Deploy bitbucketServer only on nodes with this role.",
          "type": "string"
        },
        "bridge": {
          "default": false,
          "description": "Whether to use BRIDGE networking mode for Docker container. By default, this is false and HOST mode networking is used.",
          "type": "boolean"
        }
      },
      "required": ["cpus", "mem", "instances", "name"],
      "type": "object"
    }
  },
  "type": "object"
}
